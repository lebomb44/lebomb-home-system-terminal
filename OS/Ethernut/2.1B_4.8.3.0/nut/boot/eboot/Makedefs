DEFS =
#DEFS = -DNUTDEBUG

#INCDIR = $(top_srcdir)/include
INCDIR = .

TRGT = avr-
CC     = $(TRGT)gcc
AR     = $(TRGT)ar
CP     = cp
AS     = $(TRGT)gcc -x assembler-with-cpp

ELFCOF    = elfcoff
BIN       = $(TRGT)objcopy

BINDIR    = $(top_srcdir)/bin/$(MCU)

MCFLAGS   = -mmcu=$(MCU)
CPFLAGS   = $(MCFLAGS) -Os -Wall -Wstrict-prototypes -Wa,-ahlms=$(<:.c=.lst) $(DEFS)
ASFLAGS   = -Wa,-gstabs,-ahlms=$(<:.s=.lst) $(MCFLAGS)
LDFLAGS   = $(MCFLAGS) -Wl,-Map=$(PROJ).map,--cref,--defsym,__stack=0x10FF -nostartfiles -nodefaultlibs -Ttext=0x1E000
#for ATMega2561 use the following line:
#LDFLAGS   = $(MCFLAGS) -Wl,-Map=$(PROJ).map,--cref,--defsym,__stack=0x21FF -nostartfiles -nodefaultlibs -Ttext=0x3E000
